{
  "name": "nodejsapi",
  "version": "1.0.0",
  "description": "Walter: Primer proyecto",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/main.js --ext js --exec babel-node",
    "prepare": "husky install",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --detectOpenHandles --verbose",
    "test:watch": "npm run test -- --watch",
    "artillery": "artillery run ./src/loadtest/basic.yaml -o ./report.json"
  },
  "author": "Walter Fonseca",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.20.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "artillery": "^2.0.0-27",
    "artillery-plugin-expect": "^2.1.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenenator": true
        }
      ]
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "preserve",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150
  },
  "eslintConfig": {
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "no-debugger": 1,
      "no-alert": 1,
      "space-before-function-paren": 0,
      "import/prefer-default-export": 0,
      "no-restricted-syntax": [
        2,
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "import": 0,
      "no-shadow": [
        2,
        {
          "hoist": "functions",
          "allow": [
            "resolve",
            "reject",
            "done",
            "next",
            "err",
            "error",
            "state",
            "getters",
            "index",
            "*.resolvers.js"
          ]
        }
      ],
      "no-return-assign": [
        2,
        "except-parens"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "array-callback-return": [
        0
      ],
      "no-unused-expressions": [
        2,
        {
          "allowTaggedTemplates": true
        }
      ],
      "comma-dangle": 0,
      "max-len": 0,
      "import/extensions": 0,
      "no-underscore-dangle": 0,
      "consistent-return": 0,
      "no-useless-escape": "off",
      "no-nested-ternary": 0,
      "radix": 0,
      "no-use-before-define": [
        0,
        {
          "functions": false
        }
      ],
      "prefer-const": [
        1,
        {
          "destructuring": "all"
        }
      ],
      "complexity": [
        1,
        22
      ],
      "no-unused-vars": [
        1,
        {
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "res|next|^err|item|_|__"
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {},
    "setupFilesAfterEnv": [
      "./jest-preload-env.js"
    ]
  }
}
